<Application x:Class="minigame_center.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:minigame_center"
             >
    <Application.Resources>
        <ResourceDictionary>
            <!-- Füge das bestehende Resource Dictionary hinzu -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./AppStyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Definiere weitere Ressourcen, wenn nötig -->
            <BitmapImage x:Key="AppIcon" UriSource="Assets/apple-icon-60x60.ico"/>
        </ResourceDictionary>
    </Application.Resources>

</Application>
